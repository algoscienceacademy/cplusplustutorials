---
import Layout from '../layouts/Layout.astro';

const profileData = {
  name: "Shahrear Hossain Shawon",
  username: "algoscienceacademy",
  pronouns: "he/him",
  location: "Bangladesh",
  followers: 2,
  following: 9,
  organization: "Algo Science Academy",
  stats: {
    repositories: 91,
    stars: 9,
    contributions: 231
  },
  highlights: ["Pro", "@EpicGames"],
  expertise: [
    "Cross-platform development",
    "Programming language creation",
    "3D game engine development",
    "Advanced graphics programming",
    "GUI frameworks",
    "Kernel development"
  ],
  currentProjects: [
    {
      name: "Super Cross-Platform Framework",
      description: "Building a robust framework that runs seamlessly on all device types"
    },
    {
      name: "3D Game Engine",
      description: "Integrating OpenGL, Vulkan, Bullet Physics for next-gen gaming"
    },
    {
      name: "Pylight-IDE",
      description: "Lightweight Python IDE for all skill levels"
    }
  ],
  repos: [
    {
      name: "Pylight-IDE",
      description: "The most lightweight Code Editor for C++, Python, Java, Javascript Developed by Python language GUI Pyside6",
      language: "Python",
      stars: 1
    },
    {
      name: "Mathpower",
      description: "MathPower is a comprehensive mathematical tool designed to assist students, educators, and professionals in performing complex mathematical computations with ease.",
      language: "Python"
    },
    {
      name: "Food-Delivery-app",
      description: "Food Delivery SwiftUI App using Modern MVVM Pattern",
      language: "Swift",
      stars: 1
    },
    {
      name: "Glossay-app",
      description: "Glossary SwiftUI App with Node js Backend",
      language: "Swift"
    },
    {
      name: "Cpp-_Headers",
      description: "Udemy Course for C++ Comprehensive guide for All Headers. This repository has all header files code cover.",
      language: "C++"
    },
    {
      name: "Awsome-Tkinter-100-Projects",
      description: "Collection of Tkinter Projects",
      language: "Python"
    }
  ]
};

const getLanguageColor = (lang: string) => {
  const colors = {
    'Python': 'bg-blue-500',
    'Swift': 'bg-orange-600 from-orange-500 to-orange-700',
    'C++': 'bg-pink-600 from-pink-500 to-purple-600'
  };
  return colors[lang] || 'bg-gray-500';
};

const getLanguageGlow = (lang: string) => {
  const glows = {
    'Swift': 'shadow-orange-500/50',
    'C++': 'shadow-pink-500/50'
  };
  return glows[lang] || '';
};
---

<Layout title="AlgoScience Academy GitHub">
  <div class="github-page">
    <div class="background-image"></div>
    <div class="background-overlay"></div>
    
    <main class="content-container">
      <header class="profile-header glass-panel">
        <div class="profile-main">
          <img 
            src="https://github.com/algoscienceacademy.png" 
            alt="AlgoScience Academy"
            class="profile-avatar"
          />
          <div class="profile-info">
            <h1 class="name-highlight">Shahrear Hossain Shawon</h1>
            <p class="username">@{profileData.username} ¬∑ {profileData.pronouns}</p>
            <div class="profile-stats">
              <span class="stat-item">üë• {profileData.followers} followers</span>
              <span class="stat-item">üë§ {profileData.following} following</span>
              <span class="stat-item">üìö {profileData.stats.repositories} repos</span>
              <span class="stat-item">‚≠ê {profileData.stats.stars} stars</span>
            </div>
          </div>
        </div>
        
        <div class="profile-highlights">
          <span class="highlight-tag pro-tag">Pro</span>
          <span class="divider"></span>
          <span class="highlight-tag epic-tag">@EpicGames</span>
        </div>
      </header>

      <section class="expertise-section glass-panel">
        <h2 class="section-title">Expertise</h2>
        <div class="expertise-grid">
          {profileData.expertise.map(skill => (
            <div class="expertise-item">{skill}</div>
          ))}
        </div>
      </section>

      <section class="projects-section glass-panel">
        <h2 class="section-title">Current Projects</h2>
        <div class="projects-grid">
          {profileData.currentProjects.map(project => (
            <div class="project-card">
              <h3 class="project-title">{project.name}</h3>
              <p class="project-description">{project.description}</p>
            </div>
          ))}
        </div>
      </section>

      <section class="repository-grid">
        {profileData.repos.map(repo => (
          <article class="repo-card glass-panel">
            <div class="flex justify-between items-start mb-3">
              <h3 class="repo-name">{repo.name}</h3>
              {repo.stars && (
                <span class="stat">‚≠ê {repo.stars}</span>
              )}
            </div>
            <p class="repo-description">{repo.description}</p>
            <div class="repo-stats">
              <span class={`lang-tag ${getLanguageColor(repo.language)} ${getLanguageGlow(repo.language)}`}>
                <span class="w-2 h-2 rounded-full bg-current inline-block mr-1"></span>
                {repo.language}
              </span>
            </div>
          </article>
        ))}
      </section>

      <footer class="github-footer glass-panel">
        <a 
          href="https://github.com/algoscienceacademy" 
          target="_blank"
          class="github-link"
        >
          View All Repositories
          <svg class="w-6 h-6 ml-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </footer>
    </main>
  </div>
</Layout>

<style>
  /* Base styles */
  .github-page {
    @apply min-h-screen w-full p-4 relative overflow-hidden;
  }

  .background-image {
    @apply fixed inset-0 z-0;
    background-image: url('/programming3.jpg');
    background-size: cover;
    background-position: center;
  }

  .background-overlay {
    @apply fixed inset-0 z-0 bg-gradient-to-br from-[rgba(15,23,42,0.9)] to-[rgba(88,28,135,0.8)];
  }

  /* Container and panels */
  .content-container {
    @apply relative z-10 max-w-6xl mx-auto mt-8 space-y-8;
  }

  .glass-panel {
    @apply backdrop-blur-md bg-white/10 rounded-xl p-6 
           border border-white/10 hover:border-white/20 
           transition-all duration-300;
  }

  /* Profile section */
  .profile-header {
    @apply flex flex-col gap-6 mb-8;
  }

  .profile-main {
    @apply flex items-start gap-6;
  }

  .profile-avatar {
    @apply w-32 h-32 rounded-full border-4 border-white/20 
           hover:border-white/40 transition-all duration-300;
    animation: float 3s ease-in-out infinite;
  }

  .name-highlight {
    @apply text-4xl font-bold bg-clip-text text-transparent;
    background-image: linear-gradient(to right, #60a5fa, #a855f7, #ec4899);
    text-shadow: 0 0 30px rgba(192, 132, 252, 0.2);
  }

  /* Highlights and tags */
  .profile-highlights {
    @apply flex items-center gap-4;
  }

  .highlight-tag {
    @apply px-4 py-1.5 rounded-full text-sm transition-all duration-300 hover:scale-105;
  }

  .pro-tag {
    @apply bg-gradient-to-r from-yellow-400 to-yellow-600 
           text-black font-bold shadow-lg;
  }

  .epic-tag {
    @apply bg-gradient-to-r from-purple-600 to-purple-800 text-white shadow-lg;
  }

  .divider {
    @apply w-1 h-4 bg-white/20 rounded-full;
  }

  /* Grid layouts */
  .repository-grid {
    @apply grid grid-cols-1 md:grid-cols-2 gap-6;
  }

  .expertise-grid {
    @apply grid grid-cols-2 md:grid-cols-3 gap-4 mt-4;
  }

  .projects-grid {
    @apply grid grid-cols-1 md:grid-cols-3 gap-6 mt-4;
  }

  /* Cards and items */
  .repo-card {
    @apply p-6 hover:scale-105 backdrop-blur-md bg-white/10 rounded-xl
           border border-white/10 hover:border-white/20 
           transition-all duration-300 hover:shadow-2xl hover:shadow-white/10;
  }

  .expertise-item {
    @apply bg-white/5 p-4 rounded-lg text-gray-200 text-center
           border border-white/10 hover:border-white/20
           transition-all duration-300;
  }

  /* Animations */
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  /* Text and stats */
  .stat-item {
    @apply text-gray-300 text-sm bg-white/5 px-3 py-1 rounded-full;
  }

  .lang-tag {
    @apply text-sm text-white px-3 py-1 rounded-full
           opacity-90 hover:opacity-100 transition-all duration-300
           shadow-lg hover:shadow-xl;
  }
</style>
