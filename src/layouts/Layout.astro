---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="C++ Tutorial Documentation" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="bg-container"></div>
    <div class="animated-glass"></div>
    
    <div class="relative z-10">
      <!-- Navigation -->
      <nav class="fixed top-0 w-full backdrop-blur-md bg-glass border-b border-glass-border px-6 py-4 z-50">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
          <a href="/" class="text-white text-2xl font-bold">C++ Tutorials</a>
          <div class="space-x-6">
            <a href="/" class="text-white hover:text-teal-300">Home</a>
            <a href="/practice" class="text-white hover:text-teal-300">Practice</a>
            <a href="/basics" class="text-white hover:text-teal-300">Basic</a>
            <a href="/algorithm" class="text-white hover:text-teal-300">Algorithm</a>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="min-h-screen pt-20 pb-24">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="fixed bottom-0 w-full backdrop-blur-md bg-glass border-t border-glass-border px-6 py-4 z-50">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
          <p class="text-white">&copy; 2024 C++ Tutorials</p>
          <div class="space-x-6">
            <a href="/about" class="text-white hover:text-teal-300">About</a>
            <a href="/contact" class="text-white hover:text-teal-300">Contact</a>
          </div>
        </div>
      </footer>
    </div>

    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-cpp.min.js"></script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        if (typeof Prism !== 'undefined') {
          Prism.highlightAll();
        }
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
  }

  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    position: relative;
    min-height: 100vh;
    background-color: #1a1a1a;
    overflow-x: hidden;
  }

  .bg-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-image: url('/background.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.6;
    animation: scale 20s ease-in-out infinite;
  }

  .animated-glass {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    backdrop-filter: blur(10px);
    background: var(--glass-bg);
    animation: blur 8s ease-in-out infinite;
  }

  .bg-glass {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }

  @keyframes scale {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @keyframes blur {
    0%, 100% { backdrop-filter: blur(10px); }
    50% { backdrop-filter: blur(15px); }
  }
</style>