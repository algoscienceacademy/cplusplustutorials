---
interface Props {
  title: string;
}

const { title } = Astro.props;

const categories = [
  { name: 'Algorithm', path: '/algorithm' },
  { name: 'STL', path: '/stl' },
  { name: 'DSA', path: '/datastructures' },
  
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="C++ Tutorial Documentation" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="bg-container"></div>
    <div class="animated-glass"></div>
    
    <div class="relative z-10">
      <!-- Navigation -->
      <nav class="fixed top-0 w-full backdrop-blur-md bg-glass border-b border-glass-border px-6 py-4 z-50">
        <div class="max-w-7xl mx-auto">
          <!-- Main Navigation -->
          <div class="flex justify-between items-center">
            <a href="/" class="text-white text-2xl font-bold">C++ Tutorials</a>
            <div class="hidden md:flex space-x-6">
              <a href="/" class="text-white hover:text-teal-300">Home</a>
              <a href="/practice" class="text-white hover:text-teal-300">Practice</a>
              <a href="/basics" class="text-white hover:text-teal-300">Basic</a>
            </div>
            <button class="md:hidden text-white" id="mobile-menu-btn">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-16 6h16"></path>
              </svg>
            </button>
          </div>

          <!-- Category Tabs -->
          <div class="mt-4 overflow-x-auto scrollbar-hide">
            <div class="flex space-x-4 pb-2">
              {categories.map(category => (
                <a 
                  href={category.path}
                  class="text-white hover:text-teal-300 whitespace-nowrap backdrop-blur-xl bg-glass px-4 py-2 rounded-lg border border-glass-border transition-colors"
                >
                  {category.name}
                </a>
              ))}
            </div>
          </div>

          <!-- Mobile Menu -->
          <div class="hidden md:hidden mt-4" id="mobile-menu">
            <div class="backdrop-blur-xl bg-glass border border-glass-border rounded-lg py-2">
              <a href="/" class="block px-4 py-2 text-white hover:bg-white/10">Home</a>
              <a href="/practice" class="block px-4 py-2 text-white hover:bg-white/10">Practice</a>
              <a href="/basics" class="block px-4 py-2 text-white hover:bg-white/10">Basic</a>
            </div>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="min-h-screen pt-32 pb-24">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="fixed bottom-0 w-full backdrop-blur-md bg-glass border-t border-glass-border px-6 py-4 z-50">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
          <p class="text-white">&copy; 2024-2025  All Rights Reserved</p>
          <div class="space-x-6">
            <a href="/about" class="text-white hover:text-teal-300">About</a>
            <a href="/github" class="text-white hover:text-teal-300">github</a>
          </div>
        </div>
      </footer>
    </div>

    <script is:inline>
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
    
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-cpp.min.js"></script>
  </body>
</html>

<style is:global>
  :root {
    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
  }

  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    position: relative;
    min-height: 100vh;
    background-color: #1a1a1a;
    overflow-x: hidden;
  }

  .bg-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-image: url('/programming3.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.6;
    animation: scale 20s ease-in-out infinite;
  }

  .animated-glass {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    backdrop-filter: blur(10px);
    background: var(--glass-bg);
    animation: blur 8s ease-in-out infinite;
  }

  .bg-glass {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  @keyframes scale {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @keyframes blur {
    0%, 100% { backdrop-filter: blur(10px); }
    50% { backdrop-filter: blur(15px); }
  }
</style>