---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="C++ Tutorial Documentation" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 animated-bg">
      <!-- Floating Header -->
      <nav class="fixed top-0 w-full backdrop-blur-glass bg-glass border-b border-glass-border px-6 py-4 z-50">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
          <a href="/" class="text-white text-2xl font-bold">C++ Tutorials</a>
          <div class="space-x-6">
            <a href="/" class="text-white hover:text-teal-300">Home</a>
            <a href="/practice" class="text-white hover:text-teal-300">Practice</a>
            <a href="/basics" class="text-white hover:text-teal-300">Basic</a>
            <a href="/algorithm" class="text-white hover:text-teal-300">Algorithm</a>
            
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <div class="pt-20 min-h-[calc(100vh-80px)]">
        <slot />
      </div>

      <!-- Floating Footer -->
      <footer class="fixed bottom-0 w-full backdrop-blur-glass bg-glass border-t border-glass-border px-6 py-4 z-50">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
          <div class="text-white">
            <p>&copy; 2024 C++ Tutorials. All rights reserved.</p>
          </div>
          <div class="space-x-6">
            <a href="/about" class="text-white hover:text-teal-300">About</a>
            <a href="/contact" class="text-white hover:text-teal-300">Contact</a>
          </div>
        </div>
      </footer>
    </div>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-cpp.min.js"></script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        if (typeof Prism !== 'undefined') {
          Prism.highlightAll();
        }
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --glass-bg: rgba(255, 255, 255, 0.1);
    --glass-border: rgba(255, 255, 255, 0.2);
  }
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .animated-bg {
    background: linear-gradient(135deg, #2c3e50, #4ca1af, #2c3e50, #4ca1af);
    background-size: 300% 300%;
    animation: gradientAnimation 10s ease infinite;
  }
  @keyframes gradientAnimation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>